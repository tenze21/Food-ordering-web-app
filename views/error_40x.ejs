<%- include ('layouts/header') %>
<link rel="stylesheet" href="/css/error_40x.css">
</head>
<body>
    <main class="wrapper">
        <h1>Oops... seems like there was an issue with the request.</h1>
        <br />
        <h3><%= error.status %> | <%= error.message %></h3>
        <br />
        <% if (user) { %>
            <a href="/user/home">← Back to home</a>
            <% if (user.role === 'admin') { %>
                <a href="/admin/food">← Back Admin home</a>
            <% } %>
        <% }else{%>
            <a href="/">← Back to Login</a>
        <% } %>
    </main>
</body>
</html>