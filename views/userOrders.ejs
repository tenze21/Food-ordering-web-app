<%- include('./layouts/header') %>
<link rel="stylesheet" href="/css/userOrder.css">
</head>
<body>
    <%- include('./layouts/navbar') %>
    <main class="wrapper">
        <h1>My Orders</h1>
        <h3 class="total-amount">Total Amount: Nu.<%= totalPrice %></h3>
        <div class="container">
          <% orders.forEach(order => { %>
            <% if (order.orderStatus === "Ready") { %>
              <div class="js-disclosure completed-order" data-state="no-js">
                      <button
                      class="disclosure_button js_disclosure_btn"
                      aria-expanded="false"
                      aria-controls="answer-1"
                      disabled
                      title="This button becomes functional once Javascript is active"
                      >
                        <div class="order-head">
                            <p>Total Amount: Nu. <%= order.totalPrice %></p>
                        </div>
                        <i class='bx bx-chevron-down show' aria-hidden="true"></i>
                      </button>
                <div class="orders">
                  <div class="order-items">
                      <% order.orderItems.forEach(item => { %>
                        <div class="order-item">
                          <img src="<%= item.image %>" alt="<%= item.name %>">
                          <div class="details">
                              <strong><%= item.name %></strong>
                              <p class="instruction"><%= item.specialInstructions %></p>
                          </div>
                          <p class="quantity"><%= item.quantity %></p>
                        </div>
                        <% }) %>
                  </div>
                    <div class="order-details">
                      <div>
                          <p>Journal Number: <%= order.journalNumber %></p> 
                      </div>
                    </div>
                </div>
              </div>
            <% }else{ %>
                <div class="js-disclosure" data-state="no-js">
                    <button
                    class="disclosure_button js_disclosure_btn"
                    aria-expanded="false"
                    aria-controls="answer-1"
                    disabled
                    title="This button becomes functional once Javascript is active"
                    >
                      <div class="order-head">
                          <p>Total Amount: Nu. <%= order.totalPrice %></p>
                      </div>
                      <i class='bx bx-chevron-down show' aria-hidden="true"></i>
                    </button>
      
              <div class="orders">
                <div class="order-items">
                    <% order.orderItems.forEach(item => { %>
                      <div class="order-item">
                        <img src="<%= item.image %>" alt="<%= item.name %>">
                        <div class="details">
                            <strong><%= item.name %></strong>
                            <p class="instruction"><%= item.specialInstructions %></p>
                        </div>
                        <p class="quantity"><%= item.quantity %></p>
                      </div>
                      <% }) %>
                </div>
                  <div class="order-details">
                    <div>
                        <p>Journal Number: <%= order.journalNumber %></p> 
                    </div>
                  </div>
              </div>
            </div>
            <% } %>
          <% }) %>
        </div>
    </main>
    <%- include('./layouts/footer')  %>
    <script src="/js/userOrder.js"></script>
</body>
</html>